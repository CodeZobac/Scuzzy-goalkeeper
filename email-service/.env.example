# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Azure Communication Services Configuration
EMAIL_SERVICE=https://your-comms.communication.azure.com/
AZURE_KEY=your-azure-key
AZURE_CONNECTION_STRING=endpoint=https://your-comms.communication.azure.com/;accesskey=your-azure-key
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Your-App-Name

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Application URLs
APP_BASE_URL=https://your-app-domain.com
CONFIRMATION_REDIRECT_PATH=/auth/confirm
RESET_REDIRECT_PATH=/auth/reset

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json