# Production Environment Configuration for Python Email Service
# Copy this file to /etc/email-service/.env and update with actual values

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Azure Communication Services Configuration
# Replace with your actual Azure Communication Services details
EMAIL_SERVICE=https://goalkeeper-comms.uk.communication.azure.com/
AZURE_KEY=your-azure-communication-services-key-here
AZURE_CONNECTION_STRING=endpoint=https://goalkeeper-comms.uk.communication.azure.com/;accesskey=your-access-key-here
EMAIL_FROM_ADDRESS=noreply@goalkeeper-finder.com
EMAIL_FROM_NAME=Goalkeeper-Finder

# Supabase Configuration
# Replace with your actual Supabase project details
SUPABASE_URL=https://acnejemivawhcgsmsthb.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Application URLs
# Replace with your actual domain and application URLs
APP_BASE_URL=https://your-flutter-app-domain.com
CONFIRMATION_REDIRECT_PATH=/auth/confirm
RESET_REDIRECT_PATH=/auth/reset

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
# Authentication code settings
AUTH_CODE_EXPIRY_MINUTES=5
AUTH_CODE_LENGTH=32

# Rate limiting (requests per minute)
RATE_LIMIT_SEND_EMAIL=10
RATE_LIMIT_VALIDATE_CODE=20
RATE_LIMIT_HEALTH_CHECK=60

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# HTTP client settings
HTTP_TIMEOUT=30
HTTP_RETRIES=3

# Monitoring and health check settings
HEALTH_CHECK_TIMEOUT=5
METRICS_ENABLED=true
